    <script>
      // Load dashboard data
      document.addEventListener("DOMContentLoaded", function () {
        loadDashboardStats();
        loadRecentTours();
      });

      async function loadDashboardStats() {
        try {
          const response = await fetch("/api/admin/stats");
          const data = await response.json();

          document.getElementById("total-tours").textContent = data.tours || 6;
          document.getElementById("total-bookings").textContent =
            data.bookings || 0;
          document.getElementById("total-inquiries").textContent =
            data.inquiries || 0;
        } catch (error) {
          console.error("Error loading stats:", error);
        }
      }

      async function loadRecentTours() {
        try {
          const response = await fetch("/api/admin/tours?limit=5");
          const tours = await response.json();

          const tbody = document.getElementById("tours-table");
          tbody.innerHTML = tours
            .map(
              (tour) => `
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="font-medium text-gray-900">${tour.title}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${tour.category}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">$${tour.price}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${tour.duration}</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                Active
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <a href="/admin/tours/edit/${tour.id}" class="text-blue-600 hover:text-blue-900 mr-3">Edit</a>
                            <button onclick="deleteTour(${tour.id})" class="text-red-600 hover:text-red-900">Delete</button>
                        </td>
                    </tr>
                `
            )
            .join("");
        } catch (error) {
          console.error("Error loading tours:", error);
          document.getElementById("tours-table").innerHTML =
            '<tr><td colspan="6" class="text-center py-4 text-gray-500">Failed to load tours</td></tr>';
        }
      }

      async function deleteTour(tourId) {
        if (confirm("Are you sure you want to delete this tour?")) {
          try {
            const response = await fetch(`/api/admin/tours/${tourId}`, {
              method: "DELETE",
            });

            if (response.ok) {
              alert("Tour deleted successfully!");
              loadRecentTours();
              loadDashboardStats();
            } else {
              alert("Failed to delete tour");
            }
          } catch (error) {
            console.error("Error deleting tour:", error);
            alert("Error deleting tour");
          }
        }
      }

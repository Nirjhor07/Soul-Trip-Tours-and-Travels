<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Inquiries - Admin Dashboard</title>
    <link href="/css/style.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      .admin-sidebar {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }
      .message-card {
        transition: all 0.3s ease;
      }
      .message-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <div class="admin-sidebar w-64 shadow-xl">
        <div class="p-6">
          <div class="flex items-center space-x-3 mb-8">
            <div
              class="w-10 h-10 bg-white rounded-lg flex items-center justify-center"
            >
              <i class="fas fa-user-shield text-purple-600 text-lg"></i>
            </div>
            <div>
              <h2 class="text-white font-bold text-lg">Admin Panel</h2>
              <p class="text-purple-200 text-sm">Soul Trip Tours</p>
            </div>
          </div>

          <nav class="space-y-2">
            <a
              href="/admin/dashboard"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-tachometer-alt"></i>
              <span>Dashboard</span>
            </a>
            <a
              href="/admin/tours"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-map-marked-alt"></i>
              <span>Manage Tours</span>
            </a>
            <a
              href="/admin/bookings"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-calendar-check"></i>
              <span>Bookings</span>
            </a>
            <a
              href="/admin/contacts"
              class="flex items-center space-x-3 text-white bg-white bg-opacity-20 rounded-lg px-4 py-3 font-medium"
            >
              <i class="fas fa-envelope"></i>
              <span>Contact Inquiries</span>
            </a>
            <a
              href="/admin/settings"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-cog"></i>
              <span>Settings</span>
            </a>
            <a
              href="/admin/analytics"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-chart-line"></i>
              <span>Analytics</span>
            </a>
          </nav>
        </div>
      </div>

      <!-- Main Content -->
      <div class="flex-1">
        <!-- Header -->
        <div class="bg-white shadow-sm border-b border-gray-200 px-6 py-4">
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-2xl font-bold text-gray-900">
                Contact Inquiries
              </h1>
              <p class="text-gray-600">
                Manage customer messages and inquiries
              </p>
            </div>
            <div class="flex items-center space-x-4">
              <span class="text-sm text-gray-600"
                ><%= contacts.length %> total messages</span
              >
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="p-6">
          <% if (contacts.length === 0) { %>
          <div class="text-center py-12">
            <i class="fas fa-envelope text-6xl text-gray-300 mb-4"></i>
            <h3 class="text-xl font-medium text-gray-900 mb-2">
              No messages found
            </h3>
            <p class="text-gray-500 mb-6">
              Customer inquiries will appear here when they contact you
            </p>
          </div>
          <% } else { %>
          <div class="grid grid-cols-1 gap-6">
            <% (contacts || []).forEach(contact => { %>
            <div
              class="message-card bg-white rounded-xl shadow-lg overflow-hidden"
            >
              <div class="p-6">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center space-x-3 mb-3">
                      <div
                        class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center"
                      >
                        <i class="fas fa-user text-white"></i>
                      </div>
                      <div>
                        <h3 class="text-lg font-semibold text-gray-900">
                          <%= contact.name %>
                        </h3>
                        <div
                          class="flex items-center space-x-4 text-sm text-gray-500"
                        >
                          <span
                            ><i class="fas fa-envelope mr-1"></i><%=
                            contact.email %></span
                          >
                          <% if (contact.phone) { %>
                          <span
                            ><i class="fas fa-phone mr-1"></i><%= contact.phone
                            %></span
                          >
                          <% } %>
                        </div>
                      </div>
                    </div>

                    <% if (contact.subject) { %>
                    <div class="mb-3">
                      <span class="text-sm font-medium text-gray-700"
                        >Subject:
                      </span>
                      <span class="text-sm text-gray-900"
                        ><%= contact.subject %></span
                      >
                    </div>
                    <% } %>

                    <div class="mb-4">
                      <p class="text-gray-700 leading-relaxed">
                        <%= contact.message %>
                      </p>
                    </div>

                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-3">
                        <span
                          class="<%= contact.status === 'New' ? 'bg-blue-100 text-blue-800' : contact.status === 'Read' ? 'bg-yellow-100 text-yellow-800' : contact.status === 'Replied' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %> px-2 py-1 rounded-full text-xs font-medium"
                        >
                          <%= contact.status || 'New' %>
                        </span>
                        <div class="text-sm text-gray-500">
                          <i class="fas fa-clock mr-1"></i>
                          <%= new Date(contact.created_at).toLocaleDateString()
                          %> at <%= new
                          Date(contact.created_at).toLocaleTimeString() %>
                        </div>
                      </div>
                      <div class="flex items-center space-x-3">
                        <a
                          href="mailto:<%= contact.email %>?subject=Re: <%= contact.subject || 'Your Inquiry' %>&body=Hi <%= contact.name.split(' ')[0] %>,%0A%0AThank you for contacting Soul Trip Tours.%0A%0A"
                          class="bg-blue-100 hover:bg-blue-200 text-blue-700 px-4 py-2 rounded-lg font-medium transition-colors"
                        >
                          <i class="fas fa-reply mr-2"></i>Reply
                        </a>
                        <% if (contact.phone) { %>
                        <a
                          href="tel:<%= contact.phone %>"
                          class="bg-green-100 hover:bg-green-200 text-green-700 px-4 py-2 rounded-lg font-medium transition-colors"
                        >
                          <i class="fas fa-phone mr-2"></i>Call
                        </a>
                        <% } %>
                        <button
                          data-action="update"
                          data-contact-id="<%= contact.id %>"
                          class="contact-action-btn bg-blue-100 hover:bg-blue-200 text-blue-700 px-4 py-2 rounded-lg font-medium transition-colors"
                        >
                          <i class="fas fa-edit mr-2"></i>Update
                        </button>
                        <button
                          data-action="delete"
                          data-contact-id="<%= contact.id %>"
                          class="contact-action-btn bg-red-100 hover:bg-red-200 text-red-700 px-4 py-2 rounded-lg font-medium transition-colors"
                        >
                          <i class="fas fa-trash mr-2"></i>Delete
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <script>
      // Event delegation for contact action buttons
      document.addEventListener("DOMContentLoaded", function () {
        document.addEventListener("click", function (e) {
          if (
            e.target.matches(".contact-action-btn") ||
            e.target.closest(".contact-action-btn")
          ) {
            const button = e.target.matches(".contact-action-btn")
              ? e.target
              : e.target.closest(".contact-action-btn");
            const action = button.dataset.action;
            const contactId = button.dataset.contactId;

            if (action === "delete") {
              deleteContact(contactId);
            } else if (action === "update") {
              updateContact(contactId);
            }
          }
        });
      });

      async function deleteContact(contactId) {
        if (confirm("Are you sure you want to delete this contact inquiry?")) {
          try {
            const response = await fetch(`/api/admin/contacts/${contactId}`, {
              method: "DELETE",
            });

            if (response.ok) {
              alert("Contact inquiry deleted successfully!");
              location.reload();
            } else {
              alert("Failed to delete contact inquiry");
            }
          } catch (error) {
            console.error("Error deleting contact:", error);
            alert("Error deleting contact inquiry");
          }
        }
      }

      async function updateContact(contactId) {
        // Find the contact data from the DOM
        const contactCard = document
          .querySelector(`[data-contact-id="${contactId}"]`)
          .closest(".bg-white");
        const name = contactCard.querySelector("h4").textContent.trim();
        const email = contactCard
          .querySelector(".fa-envelope")
          .parentNode.textContent.trim();
        const subject = contactCard
          .querySelector(".fa-tag")
          .parentNode.textContent.trim()
          .replace("Subject: ", "");
        const message = contactCard
          .querySelector(".text-gray-600")
          .textContent.trim();

        // Create a simple prompt for updating contact status
        const newStatus = prompt(
          `Update contact from ${name}:\n\nCurrent details:\nEmail: ${email}\nSubject: ${subject}\n\nEnter new status (New, Read, Replied, Closed):`,
          "Read"
        );

        if (
          newStatus &&
          ["New", "Read", "Replied", "Closed"].includes(newStatus)
        ) {
          try {
            const response = await fetch(`/api/admin/contacts/${contactId}`, {
              method: "PUT",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                status: newStatus,
              }),
            });

            if (response.ok) {
              alert("Contact status updated successfully!");
              location.reload();
            } else {
              alert("Failed to update contact status");
            }
          } catch (error) {
            console.error("Error updating contact:", error);
            alert("Error updating contact status");
          }
        } else if (newStatus !== null) {
          alert("Invalid status. Please enter: New, Read, Replied, or Closed");
        }
      }
    </script>
  </body>
</html>

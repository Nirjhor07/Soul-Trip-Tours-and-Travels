<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Tours - Admin Dashboard</title>
    <link href="/css/style.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      .admin-sidebar {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }
      .tour-card {
        transition: all 0.3s ease;
      }
      .tour-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <div class="admin-sidebar w-64 shadow-xl">
        <div class="p-6">
          <div class="flex items-center space-x-3 mb-8">
            <div
              class="w-10 h-10 bg-white rounded-lg flex items-center justify-center"
            >
              <i class="fas fa-user-shield text-purple-600 text-lg"></i>
            </div>
            <div>
              <h2 class="text-white font-bold text-lg">Admin Panel</h2>
              <p class="text-purple-200 text-sm">Soul Trip Tours</p>
            </div>
          </div>

          <nav class="space-y-2">
            <a
              href="/admin/dashboard"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-tachometer-alt"></i>
              <span>Dashboard</span>
            </a>
            <a
              href="/admin/tours"
              class="flex items-center space-x-3 text-white bg-white bg-opacity-20 rounded-lg px-4 py-3 font-medium"
            >
              <i class="fas fa-map-marked-alt"></i>
              <span>Manage Tours</span>
            </a>
            <a
              href="/admin/bookings"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-calendar-check"></i>
              <span>Bookings</span>
            </a>
            <a
              href="/admin/contacts"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-envelope"></i>
              <span>Contact Inquiries</span>
            </a>
            <a
              href="/admin/about"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-info-circle"></i>
              <span>About Page</span>
            </a>
            <a
              href="/admin/settings"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-cog"></i>
              <span>Settings</span>
            </a>
            <a
              href="/admin/analytics"
              class="flex items-center space-x-3 text-purple-200 hover:text-white hover:bg-white hover:bg-opacity-20 rounded-lg px-4 py-3 transition-colors"
            >
              <i class="fas fa-chart-line"></i>
              <span>Analytics</span>
            </a>
          </nav>
        </div>
      </div>

      <!-- Main Content -->
      <div class="flex-1">
        <!-- Header -->
        <div class="bg-white shadow-sm border-b border-gray-200 px-6 py-4">
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-2xl font-bold text-gray-900">Manage Tours</h1>
              <p class="text-gray-600">
                Complete control: Add, edit, update, delete, and modify all tour
                packages
              </p>
            </div>
            <a
              href="/admin/tours/add"
              class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-colors"
            >
              <i class="fas fa-plus mr-2"></i>Add New Tour
            </a>
          </div>
        </div>

        <!-- Content -->
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% (tours || []).forEach(tour => { %>
            <div
              class="tour-card bg-white rounded-xl shadow-lg overflow-hidden"
            >
              <div
                class="h-48 bg-cover bg-center"
                style="
                  background-image: url('<%= tour.image || "/images/himalayas.jpg" %>');
                "
              >
                <div class="h-full bg-black bg-opacity-30 flex items-end">
                  <div class="p-4 text-white">
                    <span
                      class="bg-blue-600 px-2 py-1 rounded text-xs font-medium"
                    >
                      <%= tour.category || 'Adventure' %>
                    </span>
                  </div>
                </div>
              </div>
              <div class="p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-2">
                  <%= tour.title %>
                </h3>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                  <%= tour.description.length > 100 ?
                  tour.description.substring(0, 100) + '...' : tour.description
                  %>
                </p>
                <div class="flex items-center justify-between mb-4">
                  <div class="flex items-center text-gray-500 text-sm">
                    <i class="fas fa-map-marker-alt mr-1"></i>
                    <%= tour.destination %>
                  </div>
                  <div class="flex items-center text-gray-500 text-sm">
                    <i class="fas fa-clock mr-1"></i>
                    <%= tour.duration %>
                  </div>
                </div>
                <div class="flex items-center justify-between">
                  <div class="text-2xl font-bold text-blue-600">
                    $<%= tour.price %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <a
                      href="/admin/tours/edit/<%= tour.id %>"
                      class="bg-green-100 hover:bg-green-200 text-green-700 p-2 rounded-lg transition-colors"
                    >
                      <i class="fas fa-edit"></i>
                    </a>
                    <button
                      data-action="delete"
                      data-tour-id="<%= tour.id %>"
                      class="tour-action-btn bg-red-100 hover:bg-red-200 text-red-700 p-2 rounded-lg transition-colors"
                    >
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>

          <% if (tours.length === 0) { %>
          <div class="text-center py-12">
            <i class="fas fa-map-marked-alt text-6xl text-gray-300 mb-4"></i>
            <h3 class="text-xl font-medium text-gray-900 mb-2">
              No tours found
            </h3>
            <p class="text-gray-500 mb-6">
              Start by adding your first tour package
            </p>
            <a
              href="/admin/tours/add"
              class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition-colors"
            >
              <i class="fas fa-plus mr-2"></i>Add Your First Tour
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <script>
      // Event delegation for tour action buttons
      document.addEventListener("DOMContentLoaded", function () {
        document.addEventListener("click", function (e) {
          if (
            e.target.matches(".tour-action-btn") ||
            e.target.closest(".tour-action-btn")
          ) {
            const button = e.target.matches(".tour-action-btn")
              ? e.target
              : e.target.closest(".tour-action-btn");
            const action = button.dataset.action;
            const tourId = button.dataset.tourId;

            if (action === "delete") {
              deleteTour(tourId);
            }
          }
        });
      });

      async function deleteTour(tourId) {
        if (
          confirm(
            "Are you sure you want to delete this tour? This action cannot be undone."
          )
        ) {
          try {
            const response = await fetch(`/api/admin/tours/${tourId}`, {
              method: "DELETE",
            });

            const result = await response.json();

            if (response.ok) {
              alert("Tour deleted successfully!");
              location.reload();
            } else {
              // Handle different types of errors
              if (result.hasBookings) {
                const deleteAnyway = confirm(
                  `${result.error}\n\nWould you like to view the bookings for this tour first?`
                );
                if (deleteAnyway) {
                  // Redirect to bookings page (when implemented)
                  window.open('/admin/bookings', '_blank');
                }
              } else {
                alert(`Failed to delete tour: ${result.error || 'Unknown error'}`);
              }
            }
          } catch (error) {
            console.error("Error deleting tour:", error);
            alert("Error deleting tour. Please check your connection and try again.");
          }
        }
      }
    </script>
  </body>
</html>
